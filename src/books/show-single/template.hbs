<div class="page-header">
  <div class="btn-toolbar pull-right" role="toolbar">
    <div class="btn-group">
      <button class="colors__destroy btn btn-danger">Destroy</button>
    </div>
    <div class="btn-group">
      <button class="colors__toggle btn btn-default">{{#unless active}}Activate{{else}}Deactivate{{/unless}}</button>
      <a href="#colors/{{id}}/edit" class="btn btn-default">Edit</a>
    </div>
  </div>
  <h1>Books: Show</h1>
</div>

<div class="row">
  <div class="col-md-3">
    <img class="img-thumbnail" src="{{img}}" alt="{{title}} ({{year}}) by {{author}}">
  </div>

  <div class="col-md-9">
    <div class="list-group">
      <div class="list-group-item">
        <h4 class="list-group-item-heading">State</h4>
        <p class="list-group-item-text">{{#if active}}Active{{else}}Inactive{{/if}}</p>
      </div>


      <div class="list-group-item">
        <h4 class="list-group-item-heading">Title</h4>
        <p class="list-group-item-text">{{title}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Author</h4>
        <p class="list-group-item-text">{{author}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Year</h4>
        <p class="list-group-item-text">{{year}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Description</h4>
        <p class="list-group-item-text">{{description}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Image</h4>
        <p class="list-group-item-text">{{img}}</p>
      </div>

    </div>
  </div>
</div>


